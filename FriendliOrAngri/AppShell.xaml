<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="FriendliOrAngri.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FriendliOrAngri"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <Tab Title="Home" Icon="{StaticResource TabOne}">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Free Mode" Icon="{StaticResource TabThree}">
            <ShellContent ContentTemplate="{DataTemplate local:FreePage}" Route="FreePage"/>
        </Tab>
        <Tab Title="Normal" Icon="{StaticResource TabTwo}">
            <ShellContent ContentTemplate="{DataTemplate local:PlayPage}" Route="PlayPage"/>
        </Tab>
        <Tab Title="Hardcore" Icon="{StaticResource TabFour}">
            <ShellContent ContentTemplate="{DataTemplate local:HardcorePage}" Route="HardcorePage"/>
        </Tab>
        <Tab Title="Stats" Icon="{StaticResource TabFive}">
            <ShellContent ContentTemplate="{DataTemplate local:StatsPage}" Route="StatsPage"/>
        </Tab>
    </TabBar>

</Shell>