<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:FriendliOrAngri;assembly=FriendliOrAngri"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="FriendliOrAngri.AppTabbedPage">

    <NavigationPage Title="Home" IconImageSource="{StaticResource TabOne}">
        <x:Arguments>
            <local:MainPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Play" IconImageSource="{StaticResource TabTwo}">
        <x:Arguments>
            <local:PlayPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Free Mode" IconImageSource="{StaticResource TabThree}">
        <x:Arguments>
            <local:FreePage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="History" IconImageSource="{StaticResource TabFour}">
        <x:Arguments>
            <local:HistoryPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Stats" IconImageSource="{StaticResource TabFive}">
        <x:Arguments>
            <local:StatsPage />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
