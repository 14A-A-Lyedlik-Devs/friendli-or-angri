<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendliOrAngri.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="10,0" 
            VerticalOptions="Center">

            <Label Text="Welcome to Friendli or Angri" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <ListView ItemsSource="{Binding Pages}" WidthRequest="300" VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Title}" 
                                    FontSize="Medium" 
                                    FontAttributes="Bold" 
                                    VerticalOptions="Center" />
                            <Label Text="{Binding Description}" 
                                    FontSize="Small" 
                                    VerticalOptions="Center" />
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>




        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
